<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/imageButton"
                style="@android:style/Widget.Material.Light.ImageButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:onClick="Cart"
                android:padding="15dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/cart" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="SignOut"
                android:padding="15dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/logout" />

        </TableRow>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="116dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/p1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:onClick="OpenP1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p1" />

                <ImageButton
                    android:id="@+id/p2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:onClick="OpenP2"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p2" />

                <ImageButton
                    android:id="@+id/p3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:onClick="OpenP3"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p3" />

                <ImageButton
                    android:id="@+id/p4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:onClick="OpenP4"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p4" />

                <ImageButton
                    android:id="@+id/p5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:onClick="OpenP5"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p5" />

                <ImageButton
                    android:id="@+id/p6"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:onClick="OpenP6"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/p6" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>